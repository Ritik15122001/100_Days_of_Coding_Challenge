package com.company;

public class REMOVE {

        static void remove(String str, String word)
        {

            String msg[] = str.split(" ");
            String new_str = "";

            for (String words : msg) {

                if (!words.equals(word)) {

                    new_str += words + " ";
                }
            }
            System.out.print(new_str);
        }
        public static void main(String[] args)
        {
            String str = "Here, the first clause “The more music he performs” uses the structure for comparing things, the second half uses the simplified “the better” from earlier in the program.";

            String word = "the";
            remove(str, word);
        }
    }


